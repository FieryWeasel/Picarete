<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_root"
    android:background="@color/flat_blue"
    tools:context="io.picarete.picarete.ui.fragments.SoloGameFragment">

    <io.picarete.picarete.model.CustomFontTextView
        android:id="@+id/title_soloGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solo"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:textColor="@color/white"/>

    <GridLayout
        android:id="@+id/grid_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"/>

    <io.picarete.picarete.model.CustomFontTextView
        android:id="@+id/score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scores"
        android:layout_centerHorizontal="true"
        android:text="@string/score"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <LinearLayout
        android:id="@+id/scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/turn_p1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/yourTurn"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"/>

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/score_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/startPoints"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="right|center_vertical"/>

        <io.picarete.picarete.model.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"/>

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/score_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/startPoints"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="left|center_vertical"/>

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/turn_p2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yourTurn"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center"/>

        </LinearLayout>

</RelativeLayout>
