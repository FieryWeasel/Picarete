<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:context="io.picarete.picarete.ui.fragments.SoloChooserFragment">

    <ScrollView
        android:layout_above="@+id/validate_modeChooser"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/title_modeChooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soloModeChooser"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/label_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_below="@+id/title_modeChooser"
            android:paddingLeft="@dimen/paddingLeftLabel"
            android:paddingTop="@dimen/paddingTopLabel"
            android:paddingBottom="@dimen/paddingTopLabel"/>

        <Spinner
            android:id="@+id/spinner_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_mode"
            android:paddingLeft="@dimen/paddingLeftLabel"
            android:paddingTop="@dimen/paddingTopLabel"
            android:paddingBottom="@dimen/paddingTopLabel"/>

        <RelativeLayout
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_mode"
            android:layout_centerHorizontal="true">

            <io.picarete.picarete.model.CustomFontTextView
                android:id="@+id/label_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/column"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_toLeftOf="@+id/x"/>
            <io.picarete.picarete.model.CustomFontTextView
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/paddingTopLabel"
                android:paddingRight="@dimen/paddingTopLabel"/>
            <io.picarete.picarete.model.CustomFontTextView
                android:id="@+id/label_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_toRightOf="@+id/x" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/numberPickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labels"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <NumberPicker
                android:id="@+id/picker_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <NumberPicker
                android:id="@+id/picker_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <io.picarete.picarete.model.CustomFontTextView
            android:id="@+id/label_ia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toughness"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_below="@+id/numberPickers"
            android:paddingLeft="@dimen/paddingLeftLabel"
            android:paddingTop="@dimen/paddingTopLabel"
            android:paddingBottom="@dimen/paddingTopLabel" />

        <Spinner
            android:id="@+id/spinner_ia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_ia"
            android:paddingLeft="@dimen/paddingLeftLabel"
            android:paddingTop="@dimen/paddingTopLabel"
            android:paddingBottom="@dimen/paddingTopLabel"/>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/validate_modeChooser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/validate"/>

</RelativeLayout>