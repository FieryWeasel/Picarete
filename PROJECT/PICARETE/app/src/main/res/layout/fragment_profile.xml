<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="io.picarete.picarete.ui.fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_modeChooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <TextView
            android:id="@+id/label_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_below="@+id/title_modeChooser"
            style="@style/top_label"/>

        <TextView
            android:id="@+id/lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startPoints"
            android:layout_above="@+id/seekBar_xp"
            android:layout_centerHorizontal="true"/>

        <SeekBar
            android:id="@+id/seekBar_xp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_xp"
            android:enabled="false"
            style="@style/horizontal_label" />

        <LinearLayout
            android:id="@+id/playedGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar_xp"
            style="@style/horizontal_label">

            <TextView
                android:id="@+id/label_playedGames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/playedGames"/>

            <TextView
                android:id="@+id/value_playedGames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/startPoints"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wonGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playedGames"
            android:layout_marginRight="@dimen/paddingGameGrid"
            android:layout_marginLeft="@dimen/paddingGameGrid"
            android:layout_marginBottom="@dimen/paddingGameGrid">

            <TextView
                android:id="@+id/label_wonGames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/WonGames"/>

            <TextView
                android:id="@+id/value_wonGames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/startPoints"
                android:gravity="right"/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wonGames"
            style="@style/horizontal_label">

            <TextView
                android:id="@+id/label_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ratioPlayer"/>

            <RatingBar
                android:id="@+id/value_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:isIndicator="true"
                android:numStars="@integer/ratioStars"
                style="@android:style/Widget.Holo.RatingBar.Small"
                android:gravity="right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/label_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratio"
            android:text="@string/chooseTitle"
            style="@style/top_label"/>

        <Spinner
            android:id="@+id/spinner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_titles"
            style="@style/horizontal_label"/>

        <LinearLayout
            android:id="@+id/colorP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_title"
            style="@style/horizontal_label">

            <TextView
                android:id="@+id/label_colorP1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colorP1"/>

            <ImageView
                android:id="@+id/value_colorP1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorP1"
            style="@style/horizontal_label">

            <TextView
                android:id="@+id/label_colorP2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colorP2"/>

            <ImageView
                android:id="@+id/value_colorP2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"/>

    </RelativeLayout>


</ScrollView>
