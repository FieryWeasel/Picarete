<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="io.picarete.picarete.ui.fragments.ProfileFragment">

    <TextView
        android:id="@+id/title_modeChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"/>

    <TextView
        android:id="@+id/label_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/title_modeChooser"
        android:paddingLeft="@dimen/paddingLeftLabel"
        android:paddingTop="@dimen/paddingTopLabel"
        android:paddingBottom="@dimen/paddingTopLabel"/>

    <TextView
        android:id="@+id/lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startPoints"
        android:layout_above="@+id/seekBar_xp"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/seekBar_xp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_xp"
        android:layout_marginRight="@dimen/paddingGameGrid"
        android:layout_marginLeft="@dimen/paddingGameGrid"
        android:layout_marginBottom="@dimen/paddingGameGrid"
        android:enabled="false" />

</RelativeLayout>
